<div class="container py-4 ">
    <div class="row align-self-center">
    <div class="col-4">
        <div class="card my-4">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class=" shadow-dark border-radius-lg pt-4 pb-3 border border-dark border-1">
            <div class="container ">
            <h2 class="text-dark ps-3 text-monospace ">Esqueceu a senha?</h2>
            </div>
          </div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>

  <div class="field mt-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Redefinição", class: "btn btn-outline-dark"%>
  </div>
<% end %>
<div class = "mt-2">
<%= render "admins/shared/links" %>
  </div>

