<main class="main-content">
    <section>
      <div class="page-header min-vh-100">
        <div class="container">
          <div class="row">
            <div class="col-6 d-lg-flex d-none h-100 my-auto pe-0 position-absolute top-0 start-0 text-center justify-content-center flex-column">
              <div class="position-relative  h-100 m-3 px-7 border-radius-lg d-flex flex-column justify-content-center" style="background-image: url('../assets/img/illustrations/illustration-reset.jpg'); background-size: cover;">
              </div>
            </div>
            <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-5">
              <div class="card card-plain bg-gradient-light">
                <div class="card-header">
                  <h4 class="font-weight-bolder">Cadastro</h4>
                  <p class="mb-0">Digite seu e-mail e senha para se cadastrar</p>
                </div>
                <div class="card-body">
                 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "admins/shared/error_messages", resource: resource %>
                    <div class="input-group input-group-outline mb-3">
                        <%= f.email_field :email,class:"form-control", placeholder:"Email", autofocus: true, autocomplete: "email" %>
                    </div>
                    <div class="input-group input-group-outline mb-3">
                      <%= f.password_field :password,class:"form-control", placeholder:"Senha",autocomplete: "new-password", :required => true%>
                    </div>
                     <div class="input-group input-group-outline mb-3">
                      <%= f.password_field :password_confirmation,class:"form-control", placeholder:"Confirmar Senha", autocomplete: "new-password", :required => true %>
                    </div>
                    <div class="actions mt-4 text-center">
                      <%= f.submit "Cadastro",  class: "btn btn-lg text-white bg-gradient-dark font-weight-bold mb-1 mt-3 mx-3"%>
                    </div>
                </div>
                <% end %>

                <div class="card-footer text-center pt-0 px-lg-2 px-1">
                  <p class="mb-2 text-sm mx-auto">
                    VocÃª tem uma conta?
                    <%= render 'admins/shared/links'%>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

