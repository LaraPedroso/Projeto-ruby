<div class="card-body">
    <%= form_with model: @role do |form| %>
        <div class="input-group input-group-outline mb-3">
            <label>Name</label>
            <%= form.text_field :username, class: "form-control" %>
        </div>
        <div class="text-center">
            <%= form.submit 'Salvar',  class: "btn btn-outline-dark btn-lg w-100 mt-4 mb-0" %>
            <%= link_to 'Cancelar', roles_path, class: "btn btn-outline-dark btn-lg w-100 mt-4 mb-0" %>
        </div>
    <% end %>
</div>