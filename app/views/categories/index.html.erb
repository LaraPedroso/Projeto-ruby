<div class="container py-4">
    <div class="row">
    <div class="col-12">
        <div class="card my-4">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class=" shadow-dark border-radius-lg pt-4 pb-3 border border-dark border-2">
            <div class="container ">
            <h2 class="text-dark ps-3 text-monospace">Authors table</h2>
            <%= link_to new_category_path, class: "btn btn-outline-dark" do %>
                novo
                <i class="fas fa-plus"></i>
            <% end %>
            </div>
            </div>
        </div>
        <div class="card-body px-0 pb-2">
            <div class="table-responsive p-0">
            <table class="table align-items-center mb-0">
                <thead>
                <tr>
                    <th class="text-uppercase text-secondary text-monospace opacity-7">Nome</th>
                    <th class="text-secondary opacity-7"></th>
                </tr>
                </thead>
                <tbody>
                <% @categories.each do |category| %>
                    <tr>
                    <td>
                        <h4 class="text-monospace mb-0"><%= category.name %></h4>
                    </td>
                    <td class="align-middle">
                        <%= link_to 'Editar' , edit_category_path(id: category.id), class: "btn btn-outline-dark" %>

                        <%= link_to 'Deletar', category_path(id: category.id), method: 
                                :delete, 
                                data: { confirm: "Tem certeza?" }, 
                                class: "btn btn-outline-dark " %>
                    </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
            </div>
        </div>
        </div>
    </div>
    </div>
</div>