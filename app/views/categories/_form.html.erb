
<div class=" bg-light">
    <%= form_with model: @category do |form| %>
        <div class="input-group input-group-outline mb-5 w-80 mx-3">
            <label >Name</label>
            <%= form.text_field :name, maxlength: 15, class: "form-control" %>
        </div>
        <div class="input-group input-group-outline mb-5 mx-3 w-80 ">
            <label> Descrição </label>
            <%= form.text_area :description, maxlength: 255, class: "form-control p-3 mb-2", size: "60x10" %>
        </div>
        <div class="text-center">
            <%= form.submit 'Salvar', class: "btn btn-outline-dark btn-lg w-100 mt-4 mb-0" %>
            <%= link_to 'Cancelar', categories_path, class: "btn btn-outline-dark btn-lg w-100 mt-4 mb-0" %>
        </div>
    <% end %>
</div>