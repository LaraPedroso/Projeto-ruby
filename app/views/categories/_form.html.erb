
<div class=" bg-light container">
    <%= form_with model: @category do |form| %>
        <div class="input-group input-group-outline mb-5 w-80 mx-2 pt-4">
            <label class="mx-4 mt-3" >Name</label>
            <%= form.text_field :name, maxlength: 15, class: "rounded border-dark form-control" %>
        </div>
        <div class="input-group input-group-outline mb-5 mx-3 w-80 ">
            <label class="mt-3 m-2"> Descrição </label>
            <%= form.text_area :description, maxlength: 255, class: "form-control p-3 mb-2 rounded border-dark", size: "60x10" %>
        </div>
        <div>
            <%= form.submit 'Salvar', class: "btn btn-lg text-white bg-gradient-dark font-weight-bold m-3" %> <br>
            <%= link_to 'Cancelar', categories_path, class: "btn btn-lg text-white bg-gradient-dark font-weight-bold m-3 mt-2 mb-5 " %>
        </div>
    <% end %>
</div>