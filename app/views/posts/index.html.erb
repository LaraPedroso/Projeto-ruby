<div class="container py-4">
    <div class="row">
    <div class="col-12">
        <div class="card my-4">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class=" shadow-dark border-radius-lg pt-4 pb-3 border border-dark border-2">
            <div class="container ">
            <h2 class="text-dark ps-3 text-monospace">Authors table</h2>
            <%= link_to new_post_path, class: "btn btn-outline-dark" do %>
                novo
                <i class="fas fa-plus"></i>
            <% end %>
            </div>
            </div>
        </div>
        <div class="card-body px-0 pb-2">
            <div class="table-responsive p-0">
            <table class="table align-items-center mb-0">
                <thead>
                <tr>
                    <th class="text-uppercase text-secondary text-monospace opacity-7">Nome</th>
                    <th class="text-uppercase text-secondary text-monospace opacity-7">Imagem</th>
                    <th class="text-secondary opacity-7"></th>
                </tr>
                </thead>
                <tbody>
            <% @posts.each do |post| %>
                <tr class="container">
                    <td>
                    <p class="font-weight-bold mb-0"><%= post.name %></p>
                    </td>
                    <td>
                        <%= image_tag post.image.variant(resize_to_limit: [100, 100]) %>
                    </td>
                    <td class="align-middle">
                    <%= link_to 'Editar', edit_post_path(id: post.id), class: "btn btn-sm text-secondary font-weight-bold" %>
                    <%= link_to 'Deletar', post_path(id: post.id), method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-sm text-white bg-primary font-weight-bold" %>
                    </td>
                </tr>
                <% end %>
                </tbody>
            </table>
            </div>
        </div>
        </div>
    </div>
    </div>
</div>